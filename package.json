{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "The auth-service for mern-space project",
    "main": "index.js",
    "scripts": {
        "test": "jest --no-cache --coverage --all --runInBand",
        "format": "prettier .",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts --legacy-watch",
        "build": "tsc",
        "prepare": "husky install",
        "start": "ts-node src/index.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate",
        "migration:run": "typeorm-ts-node-commonjs migration:run",
        "migration:create": "typeorm-ts-node-commonjs migration:create",
        "test:watch": "jest --watch --runInBand"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/suheabkhan/mern-space-auth-service.git"
    },
    "author": "suheab khan tailor",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/suheabkhan/mern-space-auth-service/issues"
    },
    "homepage": "https://github.com/suheabkhan/mern-space-auth-service#readme",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/express": "^4.17.17",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.11",
        "@types/node": "^16.11.10",
        "@types/supertest": "^6.0.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^14.0.1",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "ts-node": "10.7.0",
        "typescript": "4.5.2"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "supertest": "^6.3.3",
        "typeorm": "0.3.17",
        "winston": "^3.10.0"
    }
}
